.subBtn {
  position: absolute;
  bottom: 52rpx;
  display: inline-flex;
  transform: rotate(90deg);
  background: #008ef6!important;
  color: #fff;
  margin-bottom: 30rpx;
  text-align: center;
  justify-content: center;
}

.tip{
  color: #666!important;
  background-color: #fff!important;
  position: absolute;
  top: 280rpx;
  transform: rotate(90deg);
  left: -55rpx!important;
}

